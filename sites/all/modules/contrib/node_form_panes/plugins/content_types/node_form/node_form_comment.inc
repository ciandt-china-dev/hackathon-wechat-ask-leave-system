    'description' => t('Comment settings on the Node form.'),
    'required context' => new ctools_context_required(t('Form'), 'node_form'),
    'category' => t('Node Form Panes'),
    'edit form' => 'node_form_panes_node_form_content_type_edit_form',
    'render callback' => 'node_form_panes_node_form_comment_content_type_render',
    'admin title' => 'node_form_panes_node_form_comment_content_type_admin_title',
  );
