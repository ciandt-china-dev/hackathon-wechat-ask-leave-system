function node_form_panes_node_form_comment_content_type_render($subtype, $conf, $panel_args, &$context) {
  $block = new stdClass();
  $block->module = t('node_form');
  $block->delta = 'comment-options';

  if (isset($context->form)) {
    if (isset($context->form['comment_settings'])) {
      $block->content['comment_settings'] = $context->form['comment_settings'];
      node_form_panes_node_form_process_element($block->content['comment_settings'], $conf);
      if (!$conf['display_in_fieldset']) {
        $block->title = t('Comment options');
      }

      // Set access to false on the original rather than removing so that
      // vertical tabs doesn't clone it. I think this is due to references.
      $context->form['comment_settings']['#access'] = FALSE;
    }
  }
  else {
    $block->content = t('Comment options.');
  }
  return $block;
}

function node_form_panes_node_form_comment_content_type_admin_title($subtype, $conf, $context) {
  return t('"@s" node form comment settings', array('@s' => $context->identifier));
}
